{
  "manifest_version": 3,
  "name": "Inclusive Learning Layer - Demo",
  "description": "Accessibility layer that reads pages aloud, describes images, and enables voice navigation.",
  "version": "0.1.0",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "index.html",
    "default_title": "Inclusive Learning Layer"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ]

}
